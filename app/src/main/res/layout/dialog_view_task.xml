<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:padding="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:text="@string/Task"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_task_name"
                android:layout_below="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Hoan thanh app todo list fjjsd jncbcnsoan thanh"
                />
            <TextView
                android:id="@+id/tv_task_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@id/tv_task_name"
                tools:text="Hoan thanh app todo list.\nHoan thanh"
                />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#000000"
                android:layout_below="@id/tv_task_describe"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                tools:text="Data created: 20/20/2020"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_date_completed"
                android:layout_below="@id/tv_date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Data completed: 20/20/2020"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_date_deleted"
                android:layout_below="@id/tv_date_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Data deleted: 20/20/2020"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/bg_button"
                android:layout_below="@id/tv_date_deleted"
                android:layout_alignParentEnd="true"
                android:text="@string/btn_ok"
                android:layout_marginTop="10dp"
                />


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>